<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.ac.validasiperangkatlunakmobile.animaluniversity">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".mvp.main.MainActivity" />
        <activity android:name=".mvp.login.LoginActivity"/>
        <activity
            android:name=".mvp.gpa.GpaActivity"
            android:label="@string/title_activity_gpa" />
        <activity
            android:name=".mvp.profile.ProfileActivity"
            android:label="@string/profile" />
        <activity
            android:name=".mvp.profile.edit.targetgpa.EditTargetGpaActivity"
            android:label="@string/title_activity_target_gpa" />
        <activity
            android:name=".mvp.profile.edit.email.EditEmailActivity"
            android:label="@string/title_activity_edit_email" />
        <activity
            android:name=".mvp.profile.edit.address.EditAddressActivity"
            android:label="@string/title_activity_edit_address" />
        <activity
            android:name=".mvp.profile.edit.password.EditPasswordActivity"
            android:label="@string/title_activity_edit_password" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".mvp.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>