<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="CustomToolbar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhiteTransparent</item>
        <item name="android:editTextColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.TextIPKHeader" parent="@android:style/TextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>


    <style name="TextAppearance.TextIPKValueHeader" parent="@android:style/TextAppearance">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/ipk_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_layout</item>
    </style>

    <style name="ButtonAlertDialogTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonAlertDialogTheme</item>
        <item name="buttonBarPositiveButtonStyle">@style/ButtonAlertDialogTheme</item>
    </style>
</resources>
